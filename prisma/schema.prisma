// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User model for authentication (optional)
model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  email    String    @unique
  password String
  diaries  Dairy[]   
}

// Diary model to store travel diaries
model Dairy {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  userId       Int?      
  user         User?     @relation(fields: [userId], references: [id])
  images       Image[]
  createdAt    DateTime  @default(now())
}

// Image model to store uploaded images
model Image {
  id            Int         @id @default(autoincrement())
  url           String      @unique
  name          String
  geolocations  Geolocation[] 
  diaryId       Int?  
  diary         Dairy?       @relation(fields: [diaryId], references: [id])
}


// Geolocation model to store location data
model Geolocation {
  id         Int      @id @default(autoincrement())
  name       String   
  lat        Float    
  long       Float    
  image      Image    @relation(fields: [imageId], references: [id])
  imageId    Int     
}





















































